package com.abhijit

//Contains Business Logic
//Grails create a Spring skeleton bean for each service

import grails.gorm.transactions.Transactional
import java.sql.*
import groovy.sql.Sql

@Transactional
class StudentService {
	
	def get(id) {
		Student.get(id)
	}
	
	def list() {
		Student.list()
	}
	
	def save(student) {
		student.save()
	}
	
	def delete(id) {
		Student.get(id).delete()
	}
	
	def dbConnect() {
		return "hello"
	}
}
