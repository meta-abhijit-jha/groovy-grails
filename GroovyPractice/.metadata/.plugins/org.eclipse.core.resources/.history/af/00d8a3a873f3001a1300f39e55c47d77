package com.groovy.practice

import java.sql.*
import groovy.sql.Sql

class DBConnectivity {

	void sqlVersion(sql) {
		//Show version of MySQL
		sql.eachRow('SELECT VERSION()') { row ->
			println row[0]
		}
	}

	void createDB(sql) {
		def createString = """CREATE TABLE EMPLOYEE ( 
         FIRST_NAME CHAR(20) NOT NULL,
         LAST_NAME CHAR(20),
         AGE INT,
         SEX CHAR(1),
         INCOME FLOAT )"""
	}

	static void main(args) {

		DBConnectivity obj = new DBConnectivity()

		//Creating Connection with DB
		def sql = Sql.newInstance('jdbc:mysql://localhost:3306/testdb?useSSL=false', 'root', '123456', 'com.mysql.jdbc.Driver')

		obj.sqlVersion(sql)

		obj.createDB(sql)

		//Closing Connection
		sql.close()

	}
}
